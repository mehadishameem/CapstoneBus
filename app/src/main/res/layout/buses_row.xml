<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white">

    <!-- Time Information (Centered) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45 am "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="──"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/approxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1hrs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#03A80A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="──"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:45 am"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Bus Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/bus_24"
            android:contentDescription="Bus Icon"
            app:tint="#007AFF" />

        <TextView
            android:id="@+id/busName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="6dp"
            android:textColor="#1E1E1E"
             />

        <!-- Separator -->
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:alpha="0.6"
            android:background="#B0B0B0" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="@drawable/location_mark_24"
            android:layout_marginLeft="6dp"
            app:tint="#007AFF"/>

        <!-- Distance Information -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"> <!-- Takes available space -->

            <!-- Distance -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>-->
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 m "
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="6dp"
                    android:textColor="#007AFF" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Away at"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp"
                    android:textColor="#1E1E1E"/>
            </LinearLayout>

            <!-- Location Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

               <!-- <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location_mark_24"
                    app:tint="#007AFF" />-->

                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brack University"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

        </LinearLayout>


        <!-- ARROW ICON - Moves to the Right -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:text="30"
                android:drawableLeft="@drawable/baseline_attach_money_24"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="@drawable/circle_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
